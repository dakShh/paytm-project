{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "db:generate": {
            "cache": false
        },
        "db:push": {
            "cache": false
        },
        "build": {
            "dependsOn": ["^db:generate"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**"],
            "env": ["NEXT_AUTH_SECRET"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "dependsOn": ["^db:generate"],
            "cache": false,
            "persistent": true
        }
    }
}
